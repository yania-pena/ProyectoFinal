<%- include ../layouts/cabecera.ejs %> 
<% if (citas) { %>
<br/>
<br/>
<div class="card">
    <div class="card-header">
        Cita Médica 
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar Datos de la Cita Medica</h5>
        <p class="card-text">
            <form action="/citas/actualizar" method="POST">
                <input id="id" name="id" value="<%= citas.id%>" hidden>
                
                <div class="mb-3">
                    <label for="nombre" class="form-label">Usuario</label>
                    <select name="nombre" id="nombre" class="form-select" tabindex="1">
                        <option value="<%= citas.id_ficha %>" selected hidden>
                            <%= citas.nombre%>
                        </option>
                        <% ficha.forEach((ficha)=> { %>
                            <option value="<%= ficha.id_ficha %>">
                                <%= ficha.nombre%>
                            </option>
                            <% }) %>
                    </select>
                </div>
                    <div class="form-group">
                        <label for="fecha">Fecha de Cita</label>
                        <input type="date" name="fecha" id="fecha" value="<%=citas.fecha%>" class="form-control" required>
                    </div>
        
                    <div class="form-group">
                        <label for="hora">Hora</label>
                        <input  type="time" name="hora" id="hora" value="<%=citas.hora%>"" class="form-control" required>
                    </div>
        
                    <div class="form-group">
                        <label for="pago">Método de Pago</label>
                        <input type="text"  name="pago" id="pago"  value="<%=citas.pago%>" class="form-control" required>
                    </div>
        
                    
                    <button class="btn btn-success" type="submit">Actualizar</button>
                    <a class="btn btn-primary" href="http:/citas">Cancelar</a>
                </form>
        </p>
    </div>
</div>
<% } %>
<%- include ../layouts/pie.ejs %> 