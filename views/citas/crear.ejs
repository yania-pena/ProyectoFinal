<%- include ../layouts/cabecera.ejs %> 
<br/><br/>
<div class="card">
    <div class="card-header">
        CREACIÓN DE CITA MEDICA
    </div>
    <div class="card-body">
        <h5 class="card-title">Datos de la Cita</h5>
        <p class="card-text"></p>
        <form action="/citas/guardar" method="post"> 
            <div class="mb-3">
                <label for="nombre" class="form-label">Usuario</label>
                <select name="nombre" id="nombre" class="form-select" tabindex="1"> 
                        <option value="" selected disabled hidden>Seleccione una opción</option>
                <% citas.forEach((ficha) => { %>
                    <option value="<%= ficha.id_ficha %>"> <%= ficha.nombre%> </option>
                <% }) %> 
            </select>
        </div>

            <div class="form-group">
                <label for="my-input">Fecha de Cita Médica</label>
                <input id="my-input" class="form-control" type="date" name="fecha">
            </div>

            <div class="form-group">
                <label for="my-input">Hora</label>
                <input id="my-input" class="form-control" type="time" name="hora">
            </div>

            <div class="form-group">
                <label for="my-input">Pago</label>
                <input id="number" class="form-control" type="text"  name="pago">
            </div>

        
            <button class="btn btn-success" type="submit">Guardar</button>
            <a class="btn btn-primary" href="http:/citas">Cancelar</a>
        </form>
    </div>
</div>


