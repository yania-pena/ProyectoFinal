<%- include ../layouts/cabecera.ejs %> 
<br/>
<br/>
<div class="card">
    <div class="card-header">
        Ficha Médica 
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar Datos de la Ficha Medica</h5>
        <p class="card-text">
            <form action="/ficha/actualizar" method="POST">
    
                <input type="hidden" name="id" value="<%=fichas.id_ficha %>">
                
                
                    <div class="form-group">
                        <label for="my-input">Nombre Completo</label>
                        <input id="my-input" value="<%=fichas.nombre%>" class="form-control" type="text" name="nombre">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Fecha de Nacimiento</label>
                        <input id="my-input" value="<%=fichas.fecha_nacimiento%>" class="form-control" type="datetime" name="fecha_nacimiento" required>
                    </div>
                    <div class="form-group">
                        <label for="my-input">Edad</label>
                        <input id="my-input" value="<%=fichas.edad%>" class="form-control" type="text" name="edad">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Género</label>
                        <input id="my-input" value="<%=fichas.genero%>" class="form-control" type="text" name="genero">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Cédula</label>
                        <input id="number"  value="<%=fichas.cedula%>" class="form-control" type="number" maxlength="10" name="cedula">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Ciudad</label>
                        <input id="my-input" value="<%=fichas.ciudad%>" class="form-control" type="text" name="ciudad">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Dirección</label>
                        <input id="my-input"  value="<%=fichas.direccion%>" class="form-control" type="text" name="direccion">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Teléfono</label>
                        <input id="number"  value="<%=fichas.telefono%>" class="form-control" type="number" maxlength="10" name="telefono">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Antecedentes</label>
                        <input id="my-input"  value="<%=fichas.antecedentes%>" class="form-control" type="text" name="antecedentes">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Patologías</label>
                        <input id="my-input"  value="<%=fichas.patologias%>" class="form-control" type="text" name="patologias">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Alergias</label>
                        <input id="my-input"  value="<%=fichas.alergias%>" class="form-control" type="text" name="alergias">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Estatura (m)</label>
                        <input id="number" value="<%=fichas.estatura%>" class="form-control" type="number" step="0.01" maxlength="5" name="estatura">
                    </div>
        
                    <div class="form-group">
                        <label for="my-input">Peso (kg)</label>
                        <input id="number"  value="<%=fichas.peso%>" class="form-control"  type="number" step="0.01" maxlength="5" name="peso"|>
                    </div>
                
                    <button class="btn btn-success" type="submit">Actualizar</button>
                    <a class="btn btn-primary" href="http:/ficha">Cancelar</a>
                </form>
        </p>
    </div>
</div>

